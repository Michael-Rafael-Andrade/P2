<div class="container my-5">
    <h2>{{titulo_pagina}}</h2>
    <p class="lead">Lista de todas as categorias cadastradas no banco de dados MySQL.</p>
    
    <div class="d-flex justify-content-end mb-3">
        {{!-- Link para a pr√≥xima etapa: Criar Nova Categoria --}}
        <a href="/categorias/criar" class="btn btn-success">
            <i class="bi bi-plus-circle-fill"></i> Nova Categoria
        </a>
    </div>

    <table class="table table-striped table-hover">
        {{!-- Cabe√ßalhos da Tabela --}}
        <thead>
            <tr>
                <th scope="col"># ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Descri√ß√£o</th>
                <th scope="col">A√ß√µes</th>
            </tr>
        </thead>
        <tbody>
            {{!-- üîÅ Loop de itera√ß√£o: Percorre o array de categorias --}}
            {{#each categorias}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.nome}}</td>
                <td>{{this.descricao}}</td>
                <td>
                    <a href="/categorias/{{this.id}}/editar" class="btn btn-sm btn-warning me-2">Editar</a>
                    <form action="/categorias/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
            {{else}}
            {{!-- Exibe esta linha se o array estiver vazio --}}
            <tr>
                <td colspan="4" class="text-center text-muted">Nenhuma categoria encontrada.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>